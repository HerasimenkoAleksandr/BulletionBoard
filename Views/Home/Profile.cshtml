@model BulletionBoard.Models.Home.UserProfileViewModel;
@{
    ViewData["Title"] = "Profile";
}
<div class="text-center">
<h1 class="display-4">Кабінет користувача</h1>
</div>
@if (Model.User is null)
{
	<div class="alert alert-danger" role="alert">
		Користувач не знайдений
	</div>
}
else
{
	<section class="section about-section gray-bg" id="about">
		<div class="container">
			<div class="row align-items-center justify-content-around flex-row-reverse">
                <div class="col-lg-5 text-center">
                
					<div class="about-img">
						@if (Model.User.Avatar != null)
						{
							<img class=" nav-avatar2" src="/avatars/@(Model.User.Avatar)">
						}
						else
						{
							<img class=" nav-avatar2" src="~/avatars/Def549b2bb3-81dd-49b4-9609-ef8fdc7608d3.jpg">
						}

						
					</div>
				</div>
				<div class="col-lg-6">
					<div class="about-text">
						<ul class="list-unstyled mb-1-9">
						
							<li class="mb-2 mb-xl-3 display-28">
								<h4>
								<div class="row">
									<div class="col-4">
										<span class="display-26 text-secondary me-2 font-weight-600">Логін:</span>
									</div>
									<div class="col-7">
											@(Model.User.Login)
									</div>
								</div>
								</h4>
							</li>
						
							<li class="mb-2 mb-xl-3 display-28">
								<h4>
									<div class="row">
									<div class="col-4">
									<span class="display-26 text-secondary me-2 font-weight-600">ПІБ:</span>
									</div>
									<div class="col-7">
											@if (Model.IsPersonal)
											{
												<input name ="profile-name" value="@(Model.User.Name)" />
											}
											else
											{
												@(Model.User.Name)
											}
									</div>
								</div>
								
								
								</h4>
							</li>
							<li class="mb-2 mb-xl-3 display-28">
								<h4>
									<div class="row">
										<div class="col-4">
											<span class="display-26 text-secondary me-2 font-weight-600">Адреса:</span>
										</div>
										<div class="col-7">
											@if (Model.IsPersonal)
											{
												<input name="profile-name" value="@(Model.User.Address)" />
											}
											else
											{
												@(Model.User.Address)
											}
										</div>
									</div>


								</h4>
							</li>
							<li class="mb-2 mb-xl-3 display-28">
								<h4>
									<div class="row">
										<div class="col-4">
											<span class="display-26 text-secondary me-2 font-weight-600">Номер тел.:</span>
										</div>
										<div class="col-7">
											@if (Model.IsPersonal)
											{
												<input name="profile-name" value="@(Model.User.Phone)" />
											}
											else
											{
												@(Model.User.Phone)
											}
										</div>
									</div>


								</h4>
							</li>
							
							<li class="mb-2 mb-xl-3 display-28">
								<h4>
									<div class="row">
									<div class="col-4">
											<span class="display-26 text-secondary me-2 font-weight-600">Email: </span>
									</div>
									<div class="col-7">
											@if (Model.IsPersonal)
											{
												<input name="profile-email" value="@(Model.User.Email)" />
											}
											else
											{
												@(Model.User.Email)

											}
									</div>
								</div>	
								</h4>
							</li>
							
							<li class="mb-2 mb-xl-3 display-28">
								<h4>
								<div class="row">
									<div class="col-4">
										<span class="display-26 text-secondary me-2 font-weight-600">Дата реєстрації:</span>
									</div>
									<div class="col-7">
											@(Model.User.RegisterDt)
									</div>
								</div>
								</h4>
						</li>
						
						</ul>

					
						<div id="save-message" class="alert alert-success visually-hidden" role="alert"></div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<div class="row mt-2">
		<div class="col-6">
			@if (Model.IsPersonal)
			{
				<button id="profile-save-button" class="btn move2 move1 prof-button">Зберегти зміни</button>
			}
		</div>
		<div class="col-6">
			@if (Model.IsPersonal)
			{
				<button id="auth-signout-button" class="btn  move2 move1 prof-button">Вийти</button>
			}
		</div>
		
	</div>
}